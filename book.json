{
    "author": "Glimmer",
    "title": "加入微光",
    "language": "zh-hans",
    "referrer": "no-referrer",
    "links": {
        "sidebar": {
            "微光工作室": "https://glimmer.space"
        }
    },
    "plugins": [
        "back-to-top-button",
        "expandable-chapters",
        "chapter-fold",
        "code",
        "splitter",
        "-lunr",
        "-search",
        "insert-logo",
        "tbfed-pagefooter",
        "hide-element",
        "-sharing",
        "favicon",
        "advanced-emoji",
        "lightbox",
        "katex",
        "page-toc-button"
    ],
    "pluginsConfig": {
        "lightbox": {
            "includeJQuery": false,
            "sameUuid": true,
            "options": {
                "resizeDuration": 500,
                "wrapAround": false
            }
        },
        "insert-logo": {
            "url": "https://data.lizinuo.icu/Glimmer.png",
            "style": "background: none; max-height: 64px; min-height: 64px"
        },
        "favicon": {
            "shortcut": "icon/favicon.ico",
            "bookmark": "icon/favicon.ico",
            "appleTouch": "icon/apple-touch-icon.png"
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright &copy glimmer.space 2022",
            "modify_label": "该文章修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "hide-element": {
            "elements": [
                ".gitbook-link"
            ]
        },
        "page-toc-button": {
            "maxTocDepth": 2,
            "minTocSize": 1
        }
    }
}